<% last_12_months = 12.times.map { |i| (Date.today - i.month).beginning_of_month } %>

<table>
  <tr>
    <th> Month </th>
    <th> Income </th>
    <th> Spent </th>
    <th> Balance </th>
    <th> Status </th>
  </tr>
  <% last_12_months.each do |date| %>
    <% month = date.strftime("%b") %>
    <% year = date.strftime("%Y") %>
    <% transactions = Transaction.where(month: month, year: year.to_i) %>
    <% income = transactions.where(income: true).sum(:amount) %>
    <% spent = transactions.where.not(income: true).sum(:amount) %>
    <% balance = income - spent %>

    <tr class='data'>
      <th> <%= "#{month} #{year}"%> </th>
      <th> <%= income.zero? ? '-' : "â‚¹#{income}" %> </th>
